{
  "compilerOptions": {
    /* ─── cible & bibliothèques ─── */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* ─── React 17+ (vite) ─── */
    "jsx": "react-jsx",

    /* ─── gestion des modules ─── */
    "module": "ESNext",
    "moduleResolution": "Node",

    /* ─── rigueur TypeScript ─── */
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* ─── alias @/ pour /src ─── */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    /* ─── types Vite (env) ─── */
    "types": ["node", "react", "react-dom", "vite/client"]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ]
}
